<!--src/layouts/Header.astro-->
---
const { siteTitle } = Astro.props
---
<section class="bg-teal-600 text-white">
    <div class="max-w-5xl mx-auto py-1 flex flex-col md:flex-row">
        <span class="mx-auto md:mx-0">
            <a class="hover:opacity-75" href="/login">ចូល​ក្នុង</a> | ចុះ​ឈ្មោះ
        </span>
        <span id="date" class="mx-auto md:mx-0 md:ml-auto pt-2 md:pt-0">
            <script>
                const datetime = new Date().toLocaleDateString('it-IT')
                $('#date').html(datetime)
            </script>
        </span>
    </div>
</section>
<section class="bg-teal-700 text-white">
    <header class='text-center md:text-left max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-4 items-center py-5'>
        <div class="grid grid-cols-4 w-40 gap-2 mx-auto md:mx-0">
            <img src="/images/facebook.png" />
            <img src="/images/telegram.png" />
            <img src="/images/twitter.png" />
            <img src="/images/youtube.png" />
        </div>
        <div class='font-title text-5xl text-center md:text-left'>
            <a class="hover:opacity-75" href="/">​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​​{siteTitle}</a>
        </div>
        <form class='text-center md:text-right' action="/search">
            <input class="px-2 py-1" type='text' name='q' placeholder='Search...' required />
            <button class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-2 py-1">ស្វែង​រក</button> 
        </form>
    </header>
</section>